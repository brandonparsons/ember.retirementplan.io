<div class='row'>
  <div class='col-md-offset-2 col-md-8'>

    {{#em-form model=this form_layout='horizontal' action='confirmEmail' submit_button=false}}
      <fieldset class='fieldset-border'>
        <legend class='fieldset-border'>Confirm your Email</legend>

        {{em-input property="email" type='email' label="Email" placeholder="joe@example.com" autofocus=true required=true}}

        <div class='row'>
          <div class='col-sm-10 col-sm-offset-2'>
            {{form-submit-button text="Re-send email confirmation instructions"}}
            {{form-button action="cancel" text="Cancel"}}
          </div>
        </div>

      </fieldset>
    {{/em-form}}

    {{partial 'sections/quick-links'}}

  </div>
</div>
