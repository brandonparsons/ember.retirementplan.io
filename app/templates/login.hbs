<form class="form-horizontal" role="form" {{action 'authenticate' on='submit'}}>

  <div class="form-group">
    <label for="identification" class="col-sm-2 control-label">Email</label>

    <div class="col-sm-10">
      <div class="input-group">
        <span class="input-group-addon"><i class='fa fa-envelope'></i></span>
        {{input type='email' placeholder='me@example.com' value=identification id='identification' classNames='form-control'}}
      </div>
    </div>

  </div>

  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <div class="input-group">
        <span class="input-group-addon"><i class='fa fa-lock'>&nbsp;</i></span>
        {{input type='password' value=password id='password' classNames='form-control'}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Sign in</button>
    </div>
  </div>

</form>
