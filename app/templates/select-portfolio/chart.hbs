{{#if loadingFrontier}}
  <p class='lead text-center'><i class='fa fa-spinner fa-spin fa-3x'></i></p>
{{else}}
  {{#if selectedAnyTickers}}
    {{#if selectedEnoughTickers}}
      {{partial 'select-portfolio/chart-section'}}
    {{else}}
      <p class='lead text-center top-margin'>Please pick at least two asset classes.</p>
    {{/if}}
  {{else}}
    <p class='lead text-center top-margin'>Please pick some allowable asset classes at left.</p>
  {{/if}}
{{/if}}
