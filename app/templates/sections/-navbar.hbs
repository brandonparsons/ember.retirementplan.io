<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <a class='navbar-brand' href='/' alt='Link to project root'><img src="images/logo.png" alt="RetirementPlan.io Logo"></a>

      <p class="navbar-text center-with-logo"><em>Public Beta</em></p>
    </div>

    <div class="collapse navbar-collapse">

      <ul class="nav navbar-nav navbar-right">
        <li>
          {{#link-to 'dashboard'}}
            {{fontawesome-icon type='home'}} Dashboard
          {{/link-to}}
        </li>

        {{#if session.isAuthenticated}}
          {{!-- User is logged in --}}

          <li class="dropdown visible-md visible-lg" style='margin-right: 15px;'> {{!-- Right margin required on this element as the `row` padding is not pushing the button over --}}
            <button class="dropdown-toggle btn btn-default navbar-btn space-left" data-toggle="dropdown">{{fontawesome-icon type='user'}} {{session.user_name}}&nbsp;&nbsp;<b class="caret"></b></button>
            <ul class="dropdown-menu">
              <li class="dropdown-header">
                {{fontawesome-icon type='cog'}} Settings
              </li>
              <li><a href="#">Preferences</a>
              {{#link-to 'about' tagName='li'}}<a>About</a>{{/link-to}}
              {{#link-to 'securities' tagName='li'}}<a>Securities</a>{{/link-to}}
              <li class="divider"></li>
              <li class="dropdown-header">
                {{fontawesome-icon type='user'}} Account
              </li>
              <li><a href="#">Edit Profile</a>
              <li><a {{action 'invalidateSession'}}>{{fontawesome-icon type='sign-out'}} Sign out</a></li>
            </ul>
          </li>

          <li class='visible-xs visible-sm'>
            <a {{action 'invalidateSession'}}>{{fontawesome-icon type='sign-out'}} Sign out</a>
          </li>

          <li class='visible-xs visible-sm'>
            {{#link-to 'about'}}
              {{fontawesome-icon type='cog'}} Edit Account
            {{/link-to}}
          </li>

        {{else}}
          {{!-- User is logged out --}}

          <li>
            {{#link-to 'login'}}
              {{fontawesome-icon type='sign-in'}} Sign in
            {{/link-to}}
          </li>

        {{/if}}

      </ul>

    </div><!--/.nav-collapse -->
  </div>
</div>
