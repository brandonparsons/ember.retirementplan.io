<div class='row'>
  <div class='col-md-offset-2 col-md-8'>

    {{#em-form model=this form_layout='horizontal' action='changePassword' submit_button=false}}
      <fieldset class='fieldset-border'>
        <legend class='fieldset-border'>Change my Password</legend>

        {{em-input property="currentPassword" type='password' label="Current Password" placeholder="Your current password" autofocus=true required=true}}
        <hr>
        {{em-input property="passwordConfirmation" type='password' label="Password" placeholder="A new password" required=true disabled=currentPasswordMissing}}
        {{em-input property="password" type='password' label="Password Confirmation" required=true disabled=currentPasswordMissing}}

        <div class='row'>
          <div class='col-sm-10 col-sm-offset-2'>
            {{form-submit-button text="Change password"}}
            {{form-button action="cancel" text="Cancel"}}
          </div>
        </div>

      </fieldset>
    {{/em-form}}

  </div>
</div>
