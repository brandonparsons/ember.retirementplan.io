<thead>
  <tr>
    <th class="text-center">#</th>
    <th class="text-center">Expected Risk <small>(Standard Deviation - %)</small></th>
    <th class="text-center">Expected Return <small>(%)</small></th>
  </tr>
</thead>
<tbody>
  {{#each portfoliosWithAdditionalData}}
    <tr {{bind-attr class="selected:highlight:not-selected"}} style="cursor: pointer" {{action 'selectPortfolio' this}}>
      <td>{{prettyIndex}}</td>
      <td {{bind-attr class="rowClass"}}>{{rounded-percentage statistics.annual_std_dev}}</td>
      <td>{{rounded-percentage statistics.annual_nominal_return}}</td>
    </tr>
  {{/each}}
</tbody>
